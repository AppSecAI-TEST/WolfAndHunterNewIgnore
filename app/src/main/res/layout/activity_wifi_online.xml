<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jedi.wolf_and_hunter.activities.WifiOnlineActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="createHotSpot"
            android:text="成为主机" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="connectHotSpot"
            android:text="链接热点" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="closeConnection"
            android:text="关闭联机" />
    </LinearLayout>


    <ListView
        android:id="@+id/list_view_devices"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_marginTop="5dp"
        android:layout_weight="4"
        android:background="#ffff11">


    </ListView>

    <ListView
        android:id="@+id/list_view_joined_player"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_marginTop="5dp"
        android:layout_weight="4"
        android:background="#11FFFF">


    </ListView>

    <Button
        android:id="@+id/button_start_game"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:onClick="testWifi"
        android:text="进入游戏"
        />
</LinearLayout>
