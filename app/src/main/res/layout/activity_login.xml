<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"

    tools:context="com.jedi.wolf_and_hunter.LoginActivity">
    <LinearLayout
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/start_test_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="startTest"
            android:layout_weight="1"
            android:text="进入地图测试"
            android:textStyle="bold" />
        <Button
            android:id="@+id/start_blue_tooth_test_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:onClick="startBlueToothTest"
            android:text="蓝牙测试"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id="@+id/player_info_table"
            android:orientation="vertical"
            android:shrinkColumns="0,1,2,"
            android:stretchColumns="0,1,2,">
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="玩家" />


                <TextView
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="角色" />

                <TextView
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="队伍" />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="自己"
                    android:tag="1"/>


                <Button
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="猎人"
                    android:onClick="changeCharacterType"
                    android:tag="1"></Button>

                <Button
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="1队"
                    android:onClick="changeTeam"
                    android:tag="1"></Button>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="2P"
                    android:onClick="onOffPlayer"
                    android:tag="2"/>


                <Button
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="猎人"
                    android:onClick="changeCharacterType"
                    android:tag="2"></Button>

                <Button
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="2队"
                    android:onClick="changeTeam"
                    android:tag="2"></Button>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="3P"
                    android:onClick="onOffPlayer"
                    android:tag="3"
                    />


                <Button
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="猎人"
                    android:onClick="changeCharacterType"
                    android:tag="3"></Button>

                <Button
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="3队"
                    android:onClick="changeTeam"
                    android:tag="3"></Button>
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="4P"
                    android:onClick="onOffPlayer"
                    android:tag="4"/>


                <Button
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="猎人"
                    android:onClick="changeCharacterType"
                    android:tag="4"></Button>

                <Button
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="4队"
                    android:onClick="changeTeam"
                    android:tag="4"></Button>
            </TableRow>
        </TableLayout>
    </ScrollView>
</LinearLayout>
